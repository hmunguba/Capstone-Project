<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.login.ChoseProfileType">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/chose_a_profile_title"
        android:layout_marginTop="130dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/resident_profile_type_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true">

            <ImageView
                android:id="@+id/user_profile_type_image"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_user_profile_placeholder"
                android:clickable="false"
                android:contentDescription="@string/accessibility_resident_profile_type"/>

            <TextView
                android:id="@+id/user_profile_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/profile_type_resident"
                android:clickable="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cond_profile_type_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true">

            <ImageView
                android:id="@+id/cond_profile_type_image"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_cond_profile_placeholder"
                android:contentDescription="@string/accessibility_cond_profile_type"
                android:clickable="false"/>

            <TextView
                android:id="@+id/cond_profile_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/profile_type_condominium"
                android:clickable="false"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>